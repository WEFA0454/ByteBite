.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.message-list {
  flex-grow: 1;
  overflow-y: auto;
  padding: 10px;
}

.message-item {
  margin-bottom: 10px;
  display: flex;
  justify-content: flex-start;
}

.left {
  flex-direction: row;
}

.right {
  flex-direction: row-reverse;
}

.message-bubble {
  display: inline-block;
  padding: 10px;
  border-radius: 10px;
  max-width: 70%;
}

.left .message-bubble {
  background-color: #D9D9D9;
  color: #333;
}

.right .message-bubble {
  background-color: #0078d4;
