/* pages/flavour/flavour.wxss */
.title{
  margin: 40px 10px 10px 20px;
  font-size: 35px;
  font-weight: bold;
}

.setFlavour{
  margin:20px 20px 10px 20px;
  height:55px;
  border-radius: 10px;
  display:flex ;
  flex-direction: column;
}

.set_box .setFlavour{
  display:flex ;
  flex-direction: row;
}

.set_box .setFlavour .score{
  width: 8%;
  height: 50;
  display: flex;
  display: inline-block;
}
.set_box .setFlavour image{
  height:100%;
  width: 100%;
  display: inline-block;
}

.set_box .setFlavour .fla{
  font-weight: bold;
  font-size: 60rpx;
  height: 50;
  width: 15%;  
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 忌口部分 */
.hate_title{
  margin: 40px 10px 10px 20px;
  font-size: 35px;
  font-weight: bold;
}

.dislike .hate{
  display: flex;
  height: 100px;
  margin: 10px 10px 30px 10px;
  border:2px solid gray;
  padding:10rpx;
  border-radius: 20px;
}

.dislike{
  display: flex;
  height: 400px;
  margin: 10px 10px 30px 10px;
  flex-direction: column;
}